# Translation API URLs
TRANSLATION_API_URLS=https://api.deeplx.org/WILWeoSKQ0A3mQw0qkqhndbVodnaAIBtlQO6dAEa2ok/translate,https://api.deeplx.org/Hz_ZQB39h6zxARQ4kZP4mO8k8BANChjdj2ZZtSpq34I/translate

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENABLE_STREAMING=true
LOG_LEVEL=info

# Performance Tuning
MAX_REQUESTS_PER_MINUTE=240
TIMEOUT=30
MAX_WORKERS=8

# URL Check Configuration
CHECK_INTERVAL=300  # URL检查间隔（秒）
CHECK_TIMEOUT=5    # URL检查超时时间
AUTO_UPDATE_URLS=true  # 启用自动更新URL列表
MIN_AVAILABLE_URLS=2  # 最小可用URL数量
RESULT_FORMAT=detailed # URL检查结果格式

# Test Data Configuration
TEST_TEXT=Hello, world  # 用于测试URL可用性的文本
TEST_SOURCE_LANG=EN    # 测试文本的源语言
TEST_TARGET_LANG=ZH    # 测试目标语言

# Export Configuration
EXPORT_PATH=./results/useful.txt  # URL检查结果保存路径

# Retry Configuration
MAX_RETRIES=3          # 翻译请求失败后的最大重试次数
RETRY_DELAY=2          # 重试之间的延迟秒数

# Health Check
HEALTH_CHECK_INTERVAL=300  # 健康检查间隔（秒）

# Request Cache Control
CACHE_BUSTER_ENABLED=true  # 启用缓存破坏机制
REQUEST_TIMEOUT_FACTOR=1.2  # 超时时间系数（乘以基本超时时间）
